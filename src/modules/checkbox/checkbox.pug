mixin checkbox(params={})
  -const{textLabel='',name,value,checked=false,mods='',headerLabel=''}=params;
  -const className = 'checkbox';
    -
     let modsClasses = '';
        if (mods){
            const modsList= mods.split(',');
            for(let i = 0; i < modsList.length;i++){
                modsClasses=modsClasses+' '+className+'_'+modsList[i];
            }
        }
    label(class=className+'__label')
      input(class=className+modsClasses, type='checkbox',name=name,checked=checked, value=value)
      span(class=className+'__box')
      if(mods=='rich')
        h3(class=className+'__header')=headerLabel
      p=textLabel
