mixin field(params={})
  -const{textLabel='',name='', type='text',value="",placeholder='',disabled,masked=false}=params;
  -const maskedMod=(masked)?' text-input_masked':'';
  label.text-field__label=textLabel
      if masked
        input(class='text-field'+maskedMod,type=type,name=name,value=value,placeholder='ДД.ММ.ГГ',disabled=disabled)
      else
        input(class='text-field',type=type,name=name,value=value,placeholder=placeholder,disabled=disabled)  
