include ./../logo/logo.pug
include ./../socials/socials.pug
include ./../subscription-text-field/subscription-text-field.pug
mixin footer(params={})
    -const {mods='',footerText='',copyright=''}=params;
    //-mods: withWidgets
    -const className = 'footer';
    -
        let modsClasses = '';
        if (mods){
            const modsList= mods.split(',');
            for(let i = 0; i < modsList.length;i++){
                modsClasses=modsClasses+' '+className+'_'+modsList[i];
                }
            }

    div(class=className+modsClasses)
        if (mods!=='withWidgets')
            .footer-bar
                +logo
                div.footer-text=footerText
                +social-icons
        else
            .footer-container
                .footer-bar
                    .footer-bar__brand
                        +logo
                        div.footer-text=footerText
                    
                    each navitem in footerNavItems
                        .footer-bar__nav
                            -const {header,items}=navitem;
                            h3.footer-bar__nav__header=navitem.header
                            each item in navitem.items
                                a.footer-bar__nav__link(href="#")=item
                    .footer-bar__subscribe
                        h3.footer-bar__subscribe__header=subscribeHeader
                        div.footer-bar__subscribe__text=subscribeText
                        +subscription-text-field({placeholder:'Your email address'})
                hr(class="separate")
                .footer__footer
                    div.footer__copy=copyright
                    +social-icons
        



