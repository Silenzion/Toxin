mixin like-button(params={})
    -const {mods='',count=0}=params;
    //--const clickedMod = (clicked)?' like-button_clicked':'';
    -const className = 'like-button';
    -const jsClassName ='js-like-button';
    -
     let modsClasses = '';
        if (mods){
            const modsList= mods.split(',');
            for(let i = 0; i < modsList.length;i++){
                modsClasses=modsClasses+' '+className+'_'+modsList[i];
            }
        }

        
    div(class=className + " " +modsClasses+" "+jsClassName)
        i.material-icons favorite
        span.like-button__counter(data-count=count)=count