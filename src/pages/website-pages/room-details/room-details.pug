extends ./../../../templates/template-page.pug
block content
    include ./../../../modules/header/header.pug
    include ./../../../modules/footer/footer.pug
    include ./../../../modules/comment/comment.pug
    include ./../../../modules/bullet-list/bullet-list.pug
    include ./../../../modules/room-reservation/room-reservation.pug
    include ./../../../modules/icon-with-text/icon-with-text.pug
    include ./../../../modules/diagram/diagram.pug
    +header({
                navList:mainMenuItems,
                buttonsText:[buttonLogin,buttonRegister]})
    main.room-details
        .gallery
            img(src="assets/img/rooms/image.jpg" alt="room-photo")
            .gallery__column-elements
                img(src="assets/img/rooms/image2.jpg" alt="room-photo")
                img(src="assets/img/rooms/image3.jpg" alt="room-photo")
        .container
            .about-room
                .details
                    .icons-list
                        h3.icon-list__title="Сведения о номере"
                        +icon-text({iconCode:'insert_emoticon',title:'Комфорт',description:'Шумопоглощающие стены'})
                        +icon-text({iconCode:'location_city',title:'Удобство',description:'Окно в каждой из спален'})
                        +icon-text({iconCode:'whatshot',title:'Уют',description:'Номер оснащён камином '})
                    +diagram({countSatisf:260,countGood:260,countFine:720})
                .reviews-container
                    .reviews__header
                        h3.reviews__header__title='Отзывы посетителей номера'
                        p.reviews__header__count= '2 отзыва'
                    +comment({linkAvatar:'assets/img/user/murad.png', username:'Мурад Сарафанов',commentDate:'5 дней назад',
                        commentText:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',clickedBtn:true,likeCount:12})
                    +comment({linkAvatar:'assets/img/user/patricia.png', username:'Патрисия Стёклышкова',commentDate:'Неделю назад',
                        commentText:'Обслуживание на высоте! Всё аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое блюдо и десерт как комплимент',likeCount:2})
                .rules-container
                    .rules__rules
                        h3.rules__title='Правила'
                        +bullet-list({items:['Нельзя с питомцами','Без вечеринок и мероприятий','Время прибытия — после 13:00,а выезд до 12:00']})
                    .rules__cancel
                        h3.rules__title='Отмена'
                        p.rules__cancel__text='Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.'
            +room-reservation
    +footer({mods:'withWidgets',footerText:footerText,copyright:copyright,navItems:footerNavItems,subscribe:subscribe})
    +footer({footerText:footerText,copyright:copyright})