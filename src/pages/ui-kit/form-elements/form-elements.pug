extends ./../../../templates/template.pug
block vars
    -var title = 'Form elements'
block content
    include ./../../../modules/logo/logo.pug
    include ./../../../modules/field/field.pug
    include ./../../../modules/bullet-list/bullet-list.pug
    include ./../../../modules/button/button.pug
    include ./../../../modules/field/field.pug
    include ./../../../modules/pagination/pagination.pug
    include ./../../../modules/dropdown/dropdown.pug
    include ./../../../modules/dropdown-date/dropdown-date.pug
    include ./../../../modules/range-slider/range-slider.pug
    include ./../../../modules/like-button/like-button.pug
    include ./../../../modules/subscription-text-field/subscription-text-field.pug
    include ./../../../modules/socials/socials.pug
    include ./../../../modules/comment/comment.pug
    //-миксины для размещения эл-ов на странице,соц.иконки потом удалить
    mixin form-elements__item(params={})
        -const {itemTitle='',halfColumn=false}=params;
        -const halfMod =(halfColumn)?' form-elements__item_half-column':'';
        .form-elements__item(class=halfMod)
            .form-elements__item__title=itemTitle
            .form-elements__item__blocks
                block
    //-основное содержимое страницы
    main.form-elements
        +logo(mods='gray')
        .columns-container
            section.column_elements
                +form-elements__item
                    +text-field({textLabel:'Text field',name:'email',type:'text',placeholder:'Email'})
                +form-elements__item
                    +text-field({textLabel:'Text field',name:'email',type:'text',value:'This is pretty awesome',placeholder:'Email'})
                //dropdown-guests
                +form-elements__item
                    +text-field({textLabel:'Masked text field',name:'email',type:'text',masked:'true'})
                +form-elements__item
                    +text-field({textLabel:'subscription text field',name:'email',type:'text',value:'',placeholder:'Email',arrowIcon:true})
                +form-elements__item({itemTitle:'dropdown date',halfColumn:true})
                    +dropdown-date({placeholder:'ДД.ММ.ГГГГ'})
                +form-elements__item({itemTitle:'dropdown date',halfColumn:true})
                    +dropdown-date({placeholder:'ДД.ММ.ГГГГ',value:'19.08.2019'})
                +form-elements__item({itemTitle:'subscription text field'})
                    +subscription-text-field
                +form-elements__item
                    +dropdown({textLabel:'',open:false,placeholder:'Количество гостей',buttons:true,items:['Взрослые','Дети','Младенцы']})

            section.column_elements
                +form-elements__item({itemTitle:'like button',halfColumn:true})
                    +like-button({count:11})
                    +like-button({mods:'clicked',count:12})
                +form-elements__item
                    +social-icons
                +form-elements__item
                    +comment({linkAvatar:'assets/img/user/murad.png', username:'Мурад Сарафанов',commentDate:'5 дней назад',commentText:'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})
            section.column_elements
                +form-elements__item
                    +range-slider({textTitle:'range slider',description:'Стоимость за сутки пребывания в номере'})
                +form-elements__item({itemTitle:'Pagination'})
                    +pagination